<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_title_height"
    android:background="@color/default_title_bg">


    <RelativeLayout
        android:id="@+id/title_bar_left"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:tag="0"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/title_bar_left_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:drawableLeft="@drawable/back"
            android:textColor="@color/default_gray_6"
            android:paddingLeft="@dimen/default_horizontal_margin"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_bar_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/title_bar_center_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/default_title_text_size"
            android:textColor="@color/default_title_text_color"
            android:gravity="center"
            android:singleLine="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tag="1"
        android:paddingLeft="@dimen/default_horizontal_margin"
        android:paddingRight="@dimen/default_horizontal_margin"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/title_bar_right_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/default_gray_6"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/default_separate_gray" />
</RelativeLayout>