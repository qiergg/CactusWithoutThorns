<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- feature attrs-->

    <attr name="uik_fastEnable" format="boolean" />
    <attr name="uik_fastColor" format="reference|color" />

    <attr name="uik_strokeWidth" format="dimension" />
    <attr name="uik_strokeColor" format="reference|color" />
    <attr name="uik_radiusX" format="dimension" />
    <attr name="uik_radiusY" format="dimension" />
    <attr name="uik_radius" format="dimension" />
    <attr name="SwipeBackLayoutStyle" format="reference" />

    <declare-styleable name="SwipeBackLayout">
        <attr name="EdgeSize" format="dimension" />
        <attr name="EdgeFlag" format="enum" />
        <attr name="ShadowLeft" format="reference" />
        <attr name="ShadowRight" format="reference" />
        <attr name="ShadowBottom" format="reference" />
    </declare-styleable>

    <declare-styleable name="RotateFeature">
        <attr name="uik_roundX" format="dimension" />
        <attr name="uik_roundY" format="dimension" />
        <attr name="uik_frameEnable" format="boolean" />
        <attr name="uik_frameColor" format="reference|color" />
        <attr name="uik_frameWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundRectFeature">
        <attr name="uik_radiusX" />
        <attr name="uik_radiusY" />
        <attr name="uik_strokeEnable" format="boolean" />
        <attr name="uik_strokeColor" />
        <attr name="uik_strokeWidth" />
        <attr name="uik_fastEnable" />
        <attr name="uik_fastColor" />
    </declare-styleable>

    <attr name="uik_shadowDrawable" format="reference" />

    <declare-styleable name="RoundFeature">
        <attr name="uik_shadowDrawable" />
        <attr name="uik_shadowOffset" format="dimension" />
        <attr name="uik_fastEnable" />
        <attr name="uik_fastColor" />
        <attr name="uik_radius" />
    </declare-styleable>

    <attr name="uik_clickMaskEnable" format="boolean" />
    <attr name="uik_clickMaskColor" format="color" />

    <declare-styleable name="ClickViewMaskFeature">
        <attr name="uik_clickMaskEnable" />
        <attr name="uik_clickMaskColor" />
    </declare-styleable>

    <declare-styleable name="ClickDrawableMaskFeature">
        <attr name="uik_clickMaskEnable" />
        <attr name="uik_clickMaskColor" />
    </declare-styleable>

    <attr name="uik_orientation">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
    </attr>

    <attr name="uik_ratio" format="float" />

    <declare-styleable name="RatioFeature">
        <attr name="uik_ratio" />
        <attr name="uik_orientation" />
    </declare-styleable>

    <attr name="uik_shadowHeight" format="dimension" />

    <declare-styleable name="StickyScrollFeature">
        <attr name="uik_shadowDrawable" />
        <attr name="uik_shadowHeight" />
    </declare-styleable>

    <declare-styleable name="ParallaxScrollFeature">
        <attr name="uik_parallaxFactor" format="float" />
        <attr name="uik_innerParallaxFactor" format="float" />
        <attr name="uik_parallaxNum" format="integer" />
    </declare-styleable>

    <declare-styleable name="BounceScrollFeature">
        <attr name="uik_maxRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="PencilShapeFeature">
        <attr name="uik_radiusX" />
        <attr name="uik_radiusY" />
        <attr name="uik_topRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="AutoScaleFeature">
        <attr name="uik_minTextSize" format="dimension" />
    </declare-styleable>

    <!-- end feature attrs-->

    <!-- component attrs-->
    <declare-styleable name="BrickLayout">
        <attr name="uik_brickGap" format="dimension" />
        <attr name="uik_brickMaxLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="StaggeredGridView">
        <attr name="uik_column_count" format="integer" />
        <attr name="uik_column_count_portrait" format="integer" />
        <attr name="uik_column_count_landscape" format="integer" />
        <attr name="uik_item_margin" format="dimension" />
        <attr name="uik_grid_paddingLeft" format="dimension" />
        <attr name="uik_grid_paddingRight" format="dimension" />
        <attr name="uik_grid_paddingTop" format="dimension" />
        <attr name="uik_grid_paddingBottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="uik_indicatorRadius" format="dimension" />
        <attr name="uik_gapMargin" format="dimension" />
        <attr name="uik_total" format="integer" />
        <attr name="uik_index" format="integer" />
        <attr name="uik_focusColor" format="reference|color" />
        <attr name="uik_unfocusColor" format="reference|color" />
        <attr name="uik_strokeColor" />
        <attr name="uik_strokeWidth" />
    </declare-styleable>

    <declare-styleable name="Banner">
        <attr name="uik_autoScrollInterval" format="integer" />
        <attr name="uik_autoScroll" format="boolean" />
        <attr name="uik_ratio" />
    </declare-styleable>

    <declare-styleable name="LoopViewPager">
        <attr name="uik_ratio" />
    </declare-styleable>

    <declare-styleable name="PathView">
        <attr name="uik_strokeWidth" />
        <attr name="uik_strokeColor" />
        <attr name="uik_phase" format="float" />
    </declare-styleable>

    <declare-styleable name="GifView">
        <attr name="uik_auto_play" format="boolean" />
        <attr name="uik_gif_src" format="reference" />
    </declare-styleable>

    <!-- end component attrs-->

    <!-- FeatureNameSpace attrs-->
    <declare-styleable name="FeatureNameSpace">
        <attr name="uik_clickDrawableMaskFeature" format="boolean" />
        <attr name="uik_ratioFeature" format="boolean" />
        <attr name="uik_roundFeature" format="boolean" />
        <attr name="uik_roundRectFeature" format="boolean" />
        <attr name="uik_clickViewMaskFeature" format="boolean" />
        <attr name="uik_binaryPageFeature" format="boolean" />
        <attr name="uik_pinnedHeaderFeature" format="boolean" />
        <attr name="uik_pullToRefreshFeature" format="boolean" />
        <attr name="uik_stickyScrollFeature" format="boolean" />
        <attr name="uik_parallaxScrollFeature" format="boolean" />
        <attr name="uik_bounceScrollFeature" format="boolean" />
        <attr name="uik_pencilShapeFeature" format="boolean" />
        <attr name="uik_autoScaleFeature" format="boolean" />
        <attr name="uik_rotateFeature" format="boolean" />
        <attr name="uik_imagesavefeature" format="boolean" />
    </declare-styleable>

    <declare-styleable name="uikPullToRefresh">

        <!-- A drawable to use as the background of the Refreshable View -->
        <attr name="uikptrRefreshableViewBackground" format="reference|color" />

        <!-- A drawable to use as the background of the Header and Footer Loading Views -->
        <attr name="uikptrHeaderBackground" format="reference|color" />

        <!-- Text Color of the Header and Footer Loading Views -->
        <attr name="uikptrHeaderTextColor" format="reference|color" />

        <!-- Text Color of the Header and Footer Loading Views Sub Header -->
        <attr name="uikptrHeaderSubTextColor" format="reference|color" />

        <!-- Mode of Pull-to-Refresh that should be used -->
        <attr name="uikptrMode">
            <flag name="disabled" value="0x0" />
            <flag name="pullFromStart" value="0x1" />
            <flag name="pullFromEnd" value="0x2" />
            <flag name="both" value="0x3" />
            <flag name="manualOnly" value="0x4" />

            <!-- These last two are depreacted -->
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
        </attr>

        <!-- Whether the Indicator overlay(s) should be used -->
        <attr name="uikptrShowIndicator" format="reference|boolean" />

        <!-- Drawable to use as Loading Indicator. Changes both Header and Footer. -->
        <attr name="uikptrDrawable" format="reference" />

        <!-- Drawable to use as Loading Indicator in the Header View. Overrides value set in ptrDrawable. -->
        <attr name="uikptrDrawableStart" format="reference" />

        <!-- Drawable to use as Loading Indicator in the Footer View. Overrides value set in ptrDrawable. -->
        <attr name="uikptrDrawableEnd" format="reference" />

        <!-- Whether Android's built-in Over Scroll should be utilised for Pull-to-Refresh. -->
        <attr name="uikptrOverScroll" format="reference|boolean" />

        <!-- Base text color, typeface, size, and style for Header and Footer Loading Views -->
        <attr name="uikptrHeaderTextAppearance" format="reference" />

        <!-- Base text color, typeface, size, and style for Header and Footer Loading Views Sub Header -->
        <attr name="uikptrSubHeaderTextAppearance" format="reference" />

        <!-- Style of Animation should be used displayed when pulling. -->
        <attr name="uikptrAnimationStyle">
            <flag name="rotate" value="0x0" />
            <flag name="flip" value="0x1" />
        </attr>

        <!-- Whether the user can scroll while the View is Refreshing -->
        <attr name="uikptrScrollingWhileRefreshingEnabled" format="reference|boolean" />

        <!--
        	Whether PullToRefreshListView has it's extras enabled. This allows the user to be
        	able to scroll while refreshing, and behaves better. It acheives this by adding
        	Header and/or Footer Views to the ListView.
        -->
        <attr name="uikptrListViewExtrasEnabled" format="reference|boolean" />

        <!--
        	Whether the Drawable should be continually rotated as you pull. This only
        	takes effect when using the 'Rotate' Animation Style.
        -->
        <attr name="uikptrRotateDrawableWhilePulling" format="reference|boolean" />

        <!-- BELOW HERE ARE DEPRECEATED. DO NOT USE. -->
        <attr name="uikptrAdapterViewBackground" format="reference|color" />
        <attr name="uikptrDrawableTop" format="reference" />
        <attr name="uikptrDrawableBottom" format="reference" />
    </declare-styleable>

    <!-- viewpagerindicator-->
    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
        <!-- Style of the icon indicator's views. -->
        <attr name="vpiIconPageIndicatorStyle" format="reference" />
        <!-- Style of the line indicator. -->
        <attr name="vpiLinePageIndicatorStyle" format="reference" />
        <!-- Style of the title indicator. -->
        <attr name="vpiTitlePageIndicatorStyle" format="reference" />
        <!-- Style of the tab indicator's tabs. -->
        <attr name="vpiTabPageIndicatorStyle" format="reference" />
        <!-- Style of the underline indicator. -->
        <attr name="vpiUnderlinePageIndicatorStyle" format="reference" />
    </declare-styleable>

    <attr name="centered" format="boolean" />
    <attr name="selectedColor" format="color" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="unselectedColor" format="color" />

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="circleRadius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="LinePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" />
        <!-- Color of the unselected lines that represent the pages. -->
        <attr name="unselectedColor" />
        <!-- Color of the selected line that represents the current page. -->
        <attr name="selectedColor" />
        <!-- Width of each indicator line. -->
        <attr name="lineWidth" format="dimension" />
        <!-- Width of each indicator line's stroke. -->
        <attr name="strokeWidth" />
        <!-- Width of the gap between each indicator line. -->
        <attr name="gapWidth" format="dimension" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="TitlePageIndicator">
        <!-- Screen edge padding. -->
        <attr name="clipPadding" format="dimension" />
        <!-- Color of the footer line and indicator. -->
        <attr name="footerColor" format="color" />
        <!-- Height of the footer line. -->
        <attr name="footerLineHeight" format="dimension" />
        <!-- Style of the indicator. Default is triangle. -->
        <attr name="footerIndicatorStyle">
            <enum name="none" value="0" />
            <enum name="triangle" value="1" />
            <enum name="underline" value="2" />
        </attr>
        <!-- Height of the indicator above the footer line. -->
        <attr name="footerIndicatorHeight" format="dimension" />
        <!-- Left and right padding of the underline indicator. -->
        <attr name="footerIndicatorUnderlinePadding" format="dimension" />
        <!-- Padding between the bottom of the title and the footer. -->
        <attr name="footerPadding" format="dimension" />
        <!-- Position of the line. -->
        <attr name="linePosition">
            <enum name="bottom" value="0" />
            <enum name="top" value="1" />
        </attr>
        <!-- Color of the selected title. -->
        <attr name="selectedColor" />
        <!-- Whether or not the selected item is displayed as bold. -->
        <attr name="selectedBold" format="boolean" />
        <!-- Color of regular titles. -->
        <attr name="android:textColor" />
        <!-- Size of title text. -->
        <attr name="android:textSize" />
        <!-- Padding between titles when bumping into each other. -->
        <attr name="titlePadding" format="dimension" />
        <!-- Padding between titles and the top of the View. -->
        <attr name="topPadding" format="dimension" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="UnderlinePageIndicator">
        <!-- Whether or not the selected indicator fades. -->
        <attr name="fades" format="boolean" />
        <!-- Length of the delay to fade the indicator. -->
        <attr name="fadeDelay" format="integer" />
        <!-- Length of the indicator fade to transparent. -->
        <attr name="fadeLength" format="integer" />
        <!-- Color of the selected line that represents the current page. -->
        <attr name="selectedColor" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>


    <!-- pulltorefresh -->
    <declare-styleable name="PtrFrameLayout">
        <!-- Optional. If you put header and content in xml, you can you these to specify them. -->
        <attr name="ptr_header" format="reference" />
        <attr name="ptr_content" format="reference" />

        <!-- the resistance when you are moving the frame -->
        <attr name="ptr_resistance" format="float" />

        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="ptr_ratio_of_header_height_to_refresh" format="float" />

        <attr name="ptr_duration_to_close" format="integer" />
        <attr name="ptr_duration_to_close_header" format="integer" />

        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="ptr_pull_to_fresh" format="boolean" />

        <!-- keep header when refreshing-->
        <attr name="ptr_keep_header_when_refresh" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PtrClassicHeader">
        <attr name="ptr_rotate_ani_time" format="integer" />
    </declare-styleable>
</resources>